###
# Global Editor Configurations
##

root = true

[*]
end_of_line = lf
insert_final_newline = false

charset = utf-8

indent_style = space
indent_size  = 2

[*.py]
indent_size  = 4
indent_style = space

[Makefile]
indent_style = tab
indent_size  = 4

[*.go]
indent_style = tab

[*.sh]
indent_size  = 4
indent_style = space

[{.envrc, .envrc.*}]
indent_size  = 4
indent_style = space

[*.json]
indent_size  = 4
indent_style = space

[{*.yaml, *.yml}]
indent_style = space
indent_size  = 2

# .editorconfig
